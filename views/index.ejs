<!doctype html>
<html>
<head>
    <title>Roulette</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="style.css">
</head>
<body>
    <section class="table">
       <img class='wheel'src="img/screen_shot_2021-03-31_at_10.09.34_am-removebg-preview.png" alt="">
    </section>
<div class="container">
   
   

    <div class="jumbotron text-center">
        <h1>Lets Play!</h1>
        <!-- <img src="img/savage21.jpg" alt="21 Savage Profile Photo"> -->

        <div class="gameBoard">
            <h2 class="betTooLittle"></h2>
            <form>
                <input type="number" id="bettingValue">
                <select id="choice">
                    <option value="red">Red</option>
                    <option value="black">Black</option>
                    <option value="even">Even</option>
                    <option value="odd">Odd</option>
                    <option value="row1">Row 1</option>
                    <option value="row2">Row 2</option>
                    <option value="row3">Row 3</option>
                    <option value="1-12">1 - 12</option>
                    <option value="13-24">13 - 24</option>
                    <option value="25-36">25 - 36</option>
                    <option value="1-18">1 - 18</option>
                    <option value="19-36">19 - 36</option>
                    <option value="0">0</option>
                    <option value="00">00</option>
                </select>
            </form>
            <button id="submitBet">Bet!</button>
        </div>
        <section class="lastGamePlayed">
            <%if (lastGame!==undefined) {%>
                <h2><%= (lastGame.houseWins) ? 'You Lost! The casino loves you!' : 'You win! ... Just... just leave' %></h2>
                <h2>You bet $<%= lastGame.bettingAmount >= 1000 ? overThousand : lastGame.bettingAmount %>.00</h2>
                <h2>You bet on <%= lastGame.betOn %></h2>
                <h2>The ball landed on <%= lastGame.landed %></h2>
            <%}%>
        </section>

        <p>Admin Login:</p>
        <a href="/login" class="btn btn-default"><span class="fa fa-user"></span>Login</a>

    </div>

</div>
<script type="text/javascript" src="main.js"></script>
</body>
</html>
